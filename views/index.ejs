<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" type="text/css" href="style.css"/>
</head>
<body>
  <div class="bg_photos">
    <% tweets.statuses.forEach(function(status) { %>
      <img src="<%= status.user.profile_image_url.replace('_normal', '') %>">
    <% }) %>
  </div>
  <div class="overlay">
    <% index = Math.floor(Math.random()*(tweets.statuses.length+1)); %>
    <% status = tweets.statuses[index] %>
    <div class="review">
      <div class="profile">
        <img src="<%= status.user.profile_image_url.replace('_normal', '') %>">
      </div>
      <div class="profile_info">
        <p><%= status.user.name %></p>
      </div>
      <div class="comment">
        <p><%= status.text %></p>
      </div>
    </div>
  </div>
</body>
</html>
